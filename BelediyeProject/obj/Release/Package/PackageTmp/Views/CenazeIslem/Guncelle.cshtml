@model BelediyeProject.Models.CenazeIslemViewModel

@{
    ViewBag.Title = "Cenaze Kaydet";
    Layout = "~/Views/Shared/_AnaSayfaLayoutPage.cshtml";
}

@section MenuSection
{
    @foreach (var menuItem in Model.Menu.Where(p => p.UstMenuId == null))
    {
        @Html.Raw("<li>")
        if (string.IsNullOrEmpty(menuItem.Link))
        {
            <a href='#'><i class="fa fa-th-large"></i> <span class="nav-label">@menuItem.Adi</span> <span class="fa arrow"></span></a>

            @Html.Raw("<ul class='nav nav - second - level'>")

            foreach (var subMenuItem in Model.Menu.Where(p => p.UstMenuId == menuItem.Id))
            {
                <li><a href='@subMenuItem.Link'>@subMenuItem.Adi</a></li>
            }

            @Html.Raw("</ul>")
        }
        else
        {
            <a href='@menuItem.Link'><i class="fa fa-th-large"></i> <span class="nav-label">@menuItem.Adi</span></a>
        }

        @Html.Raw("</li>")
    }
}

@section MainSection
{
    @using (Html.BeginForm())
    {
        <script type="text/javascript">

            $(function () {
                $("#Tarih").datepicker(
                    {
                        dateFormat: "dd.mm.yy",
                        autoSize: true,
                        dayNames: ["pazar", "pazartesi", "salı", "çarşamba", "perşembe", "cuma", "cumartesi"],
                        dayNamesMin: ["pa", "pzt", "sa", "çar", "per", "cum", "cmt"],
                        defaultDate: +5,
                        maxDate: "+2y+1m +2w",
                        minDate: "-1y-1m -2w",
                        monthNamesShort: ["Ocak", "Şubat", "Mart", "Nisan", "Mayıs", "Haziran", "Temmuz", "Ağustos", "Eylül", "Ekim", "Kasım", "Aralık"],
                        nextText: "ileri",
                        prevText: "geri",
                    });
            });

        </script>

        @Html.HiddenFor(m => m.CenazeKey)
        <div class="wrapper wrapper-content">
            <div class="row">
                <div class="col-lg-12">
                    <div class="ibox float-e-margins">
                        <div class="ibox-content">
                            <h3>
                                Cenaze Bilgi Güncelle
                            </h3>
                            <div class="form-horizontal m-t-md">
                                <div class="form-group">
                                    <label class="col-sm-2 col-sm-2 control-label">Adı Soyadi : </label>
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(m => m.AdiSoyadi, new
                                   {
                                       @type = "text",
                                       @class = "form-control",
                                       @placeholder = "",
                                       @required = "",
                                   })
                                        @Html.ValidationMessageFor(m => m.AdiSoyadi)
                                    </div>
                                </div>
                                <div class="hr-line-dashed"></div>
                                <div class="form-group">
                                    <label class="col-sm-2 col-sm-2 control-label">Baba Adı : </label>
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(m => m.BabaAdi, new
                                   {
                                       @type = "text",
                                       @class = "form-control",
                                       @placeholder = "",
                                       @required = ""
                                   })
                                        @Html.ValidationMessageFor(m => m.BabaAdi)
                                    </div>
                                </div>
                                <div class="hr-line-dashed"></div>
                                <div class="form-group">
                                    <label class="col-sm-2 col-sm-2 control-label">Tarih : </label>
                                    <div class="col-sm-10">
                                        @Html.DatePickerFor(m => m.Tarih, "autoclose=true", "todayBtn=true", "todayHighlight=true")
                                        @Html.ValidationMessageFor(m => m.Tarih)
                                    </div>
                                </div>
                                <div class="hr-line-dashed"></div>
                                <div class="form-group">
                                    <label class="col-sm-2 col-sm-2 control-label">Doğum Yeri : </label>
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(m => m.DogumYeri, new
                                   {
                                       @type = "text",
                                       @class = "form-control",
                                       @placeholder = "",
                                       @required = ""
                                   })
                                        @Html.ValidationMessageFor(m => m.DogumYeri)
                                    </div>
                                </div>
                                <div class="hr-line-dashed"></div>
                                <div class="form-group">
                                    <label class="col-sm-2 col-sm-2 control-label">İletişim : </label>
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(m => m.Iletisim, new
                                   {
                                       @type = "text",
                                       @class = "form-control",
                                       @placeholder = "",
                                       @required = ""
                                   })
                                        @Html.ValidationMessageFor(m => m.Iletisim)
                                    </div>
                                </div>
                                <div class="hr-line-dashed"></div>
                                <div class="form-group">
                                    <label class="col-sm-2 col-sm-2 control-label">Açıklama : </label>
                                    <div class="col-sm-10">
                                        @Html.TextAreaFor(m => m.Aciklama, new
                                   {
                                       @type = "text",
                                       @class = "form-control",
                                       @placeholder = "",
                                       @required = ""
                                   })
                                        @Html.ValidationMessageFor(m => m.Aciklama)
                                    </div>
                                </div>
                                <div class="hr-line-dashed"></div>
                                <div class="form-group">
                                    <label class="col-sm-2 col-sm-2 control-label">Aktif : </label>
                                    <div class="col-sm-10">
                                        @Html.CheckBoxFor(m => m.AktifMi, new
                                   {
                                       @class = "i-checks",
                                       @checked = "checked"
                                   })
                                    </div>
                                </div>
                                <div class="hr-line-dashed"></div>
                                <div class="form-group text-center">
                                    <input type="submit" id="KaydetGuncelle" value='
                                       @if (Model.CenazeKey == 0 || Model.CenazeKey == -1)
                                       {
                                           @Html.Raw("Kaydet")
                                       }
                                       else
                                       {
                                           @Html.Raw("Güncelle")
                                       } '
                                           formaction="/CenazeIslem/Guncelle" class="btn btn-success" />
                                    <input type="button" value="İptal" class="btn btn-danger" onclick="window.location.href='@Url.Action("Index", "CenazeIslem" )';" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

}

