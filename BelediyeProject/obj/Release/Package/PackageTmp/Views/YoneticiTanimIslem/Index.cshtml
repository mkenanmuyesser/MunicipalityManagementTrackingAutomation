@model BelediyeProject.Models.YoneticiTanimIslemViewModel

@{
    ViewBag.Title = "Yönetici Bilgileri";
    Layout = "~/Views/Shared/_AnaSayfaLayoutPage.cshtml";
}

@section HeadSection
{
    @Scripts.Render("~/ckeditor/ckeditor.js");
    @Scripts.Render("~/ckeditor/ckfinder/ckfinder.js");
}

@section MenuSection
{
    @foreach (var menuItem in Model.Menu.Where(p => p.UstMenuId == null))
    {
        @Html.Raw("<li>")
        if (string.IsNullOrEmpty(menuItem.Link))
        {
            <a href='#'><i class="fa fa-th-large"></i> <span class="nav-label">@menuItem.Adi</span> <span class="fa arrow"></span></a>

            @Html.Raw("<ul class='nav nav - second - level'>")

            foreach (var subMenuItem in Model.Menu.Where(p => p.UstMenuId == menuItem.Id))
            {
                <li><a href='@subMenuItem.Link'>@subMenuItem.Adi</a></li>
            }

            @Html.Raw("</ul>")
        }
        else
        {
            <a href='@menuItem.Link'><i class="fa fa-th-large"></i> <span class="nav-label">@menuItem.Adi</span></a>
        }

        @Html.Raw("</li>")
    }
}

@section MainSection
{
    <div class="wrapper wrapper-content">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-content">
                        <h3>
                            Yönetici Bilgileri
                        </h3>
                        <div class="form-horizontal m-t-md">
                            @using (Html.BeginForm())
                            {
                                @Html.HiddenFor(m => m.YoneticiKey)

                                <div class="form-group">
                                    <label class="col-sm-2 col-sm-2 control-label">Adı Soyadı : </label>
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(m => m.AdiSoyadi, new
                                   {
                                       @type = "text",
                                       @class = "form-control",
                                       @placeholder = "",
                                       @required = "",
                                   })
                                        @Html.ValidationMessageFor(m => m.AdiSoyadi)
                                    </div>
                                </div>
                                <div class="hr-line-dashed"></div>
                                <div class="form-group">
                                    <label class="col-sm-2 col-sm-2 control-label">Açıklama : </label>
                                    <div class="col-sm-10">
                                        @Html.TextAreaFor(model => model.Aciklama, new { @id = "editor1" })
                                        <script type="text/javascript">
                                            var editor = CKEDITOR.instances['editor1'];
                                            if (editor) { editor.destroy(true); }
                                            CKEDITOR.replace('editor1', {
                                                enterMode: CKEDITOR.ENTER_BR,
                                            });
                                            CKFinder.setupCKEditor(null, '@Url.Content("~/ckeditor/ckfinder/")');
                                        </script>
                                        @Html.ValidationMessageFor(m => m.Aciklama)
                                    </div>
                                </div>
                                <div class="hr-line-dashed"></div>
                                <div class="form-group text-center">
                                    <input type="submit" id="Guncelle" value='Güncelle' formaction="/YoneticiTanimIslem/Index" class="btn btn-success" />
                                    <input type="button" value="İptal" class="btn btn-danger" onclick="window.location.href='@Url.Action("Index", "YoneticiTanimIslem" )';" />
                                </div>
                                <div class="hr-line-dashed"></div>
                                <div class="form-group">
                                    @foreach (var resim in Model.YoneticiResims)
                                    {
                                        <div style="float:left" class="text-center">
                                            <table>
                                                <tr>
                                                    <td>
                                                        <img width="200" height="250" src='~/Uploads/Resim/@resim.DosyaYolu' />
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        @Html.ActionLink("Resmi Sil", "ResimSil", "YoneticiTanimIslem", new { id = resim.YoneticiResimKey },
                 new { onclick = "return confirm('Silmek istediğinize emin misiniz?');" })
                                                    </td>
                                                </tr>
                                            </table>
                                        </div>
                                    }
                                </div>
                            }
                            @if (!Model.YoneticiResims.Any())
                            {
                                <div class="hr-line-dashed"></div>
                                <div class="form-group">
                                    <label class="col-sm-2 col-sm-2 control-label">Resim : </label>
                                    <div class="col-sm-10">
                                        @using (Html.BeginForm("ResimYukle", "YoneticiTanimIslem", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                        {
                                            <table>
                                                <tr>
                                                    <td>
                                                        <input type="file" name="file" />
                                                    </td>
                                                    <td>
                                                        <input type="submit" value="Yükle" />
                                                    </td>
                                                </tr>
                                            </table>
                                        }
                                    </div>
                                    <br />
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}