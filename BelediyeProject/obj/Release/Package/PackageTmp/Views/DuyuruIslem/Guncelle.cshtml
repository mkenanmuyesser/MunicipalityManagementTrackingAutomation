@model BelediyeProject.Models.DuyuruIslemViewModel

@{
    ViewBag.Title = "Duyuru Güncelle";
    Layout = "~/Views/Shared/_AnaSayfaLayoutPage.cshtml";
}

@section MenuSection
{
    @foreach (var menuItem in Model.Menu.Where(p => p.UstMenuId == null))
    {
        @Html.Raw("<li>")
        if (string.IsNullOrEmpty(menuItem.Link))
        {
            <a href='#'><i class="fa fa-th-large"></i> <span class="nav-label">@menuItem.Adi</span> <span class="fa arrow"></span></a>

            @Html.Raw("<ul class='nav nav - second - level'>")

            foreach (var subMenuItem in Model.Menu.Where(p => p.UstMenuId == menuItem.Id))
            {
                <li><a href='@subMenuItem.Link'>@subMenuItem.Adi</a></li>
            }

            @Html.Raw("</ul>")
        }
        else
        {
            <a href='@menuItem.Link'><i class="fa fa-th-large"></i> <span class="nav-label">@menuItem.Adi</span></a>
        }

        @Html.Raw("</li>")
    }
}

@section MainSection
{
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(m => m.DuyuruKey)
        <div class="wrapper wrapper-content">
            <div class="row">
                <div class="col-lg-12">
                    <div class="ibox float-e-margins">
                        <div class="ibox-content">
                            <h3>
                                Duyuru Güncelle
                            </h3>
                            <div class="form-horizontal m-t-md">
                                <div class="form-group">
                                    <label class="col-sm-2 col-sm-2 control-label">Başlık : </label>
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(m => m.Baslik, new
                                   {
                                       @type = "text",
                                       @class = "form-control",
                                       @placeholder = "",
                                       @required = "",
                                   })
                                        @Html.ValidationMessageFor(m => m.Baslik)
                                    </div>
                                </div>
                                <div class="hr-line-dashed"></div>
                                <div class="form-group">
                                    <label class="col-sm-2 col-sm-2 control-label">Özet : </label>
                                    <div class="col-sm-10">
                                        @Html.TextAreaFor(m => m.Ozet, new
                                   {
                                       @type = "text",
                                       @class = "form-control",
                                       @placeholder = "",
                                       @required = ""
                                   })
                                        @Html.ValidationMessageFor(m => m.Ozet)
                                    </div>
                                </div>
                                <div class="hr-line-dashed"></div>
                                <div class="form-group">
                                    <label class="col-sm-2 col-sm-2 control-label">Aktif : </label>
                                    <div class="col-sm-10">
                                        @Html.CheckBoxFor(m => m.AktifMi, new
                                   {
                                       @class = "i-checks",
                                       @checked = "checked"
                                   })
                                    </div>
                                </div>
                                <div class="hr-line-dashed"></div>
                                <div class="form-group text-center">
                                    <input type="submit" id="KaydetGuncelle" value='
                                       @if (Model.DuyuruKey == 0 || Model.DuyuruKey == -1)
                                       {
                                           @Html.Raw("Kaydet")
                                       }
                                       else
                                       {
                                           @Html.Raw("Güncelle")
                                       } '
                                           formaction="/DuyuruIslem/Guncelle" class="btn btn-success" />
                                    <input type="button" value="İptal" class="btn btn-danger" onclick="window.location.href='@Url.Action("Index", "DuyuruIslem" )';" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    <script type="text/javascript">
        $(function () {
            $(".datefield").datepicker();
        });
    </script>
}

