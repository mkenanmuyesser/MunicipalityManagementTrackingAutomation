@model BelediyeProject.Models.ProgramIslemAyarViewModel

@{
    ViewBag.Title = "Program Ayarları";
    Layout = "~/Views/Shared/_AnaSayfaLayoutPage.cshtml";
}

@section MenuSection
{
    @foreach (var menuItem in Model.Menu.Where(p => p.UstMenuId == null))
    {
        @Html.Raw("<li>")
        if (string.IsNullOrEmpty(menuItem.Link))
        {
            <a href='#'><i class="fa fa-th-large"></i> <span class="nav-label">@menuItem.Adi</span> <span class="fa arrow"></span></a>

            @Html.Raw("<ul class='nav nav - second - level'>")

            foreach (var subMenuItem in Model.Menu.Where(p => p.UstMenuId == menuItem.Id))
            {
                <li><a href='@subMenuItem.Link'>@subMenuItem.Adi</a></li>
            }

            @Html.Raw("</ul>")
        }
        else
        {
            <a href='@menuItem.Link'><i class="fa fa-th-large"></i> <span class="nav-label">@menuItem.Adi</span></a>
        }

        @Html.Raw("</li>")
    }
}

@section MainSection
{
    <div class="wrapper wrapper-content">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-content">
                        <h3>
                            Program Ayarları
                        </h3>
                        <div class="form-horizontal m-t-md">
                            @using (Html.BeginForm())
                            {
                                @Html.HiddenFor(m => m.ProgramAyarKey)

                                <div class="form-group">
                                    <label class="col-sm-2 col-sm-2 control-label">Başlık : </label>
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(m => m.Baslik, new
                                   {
                                       @type = "text",
                                       @class = "form-control",
                                       @placeholder = "",
                                       @required = "",
                                   })
                                        @Html.ValidationMessageFor(m => m.Baslik)
                                    </div>
                                </div>
                                <div class="hr-line-dashed"></div>
                                <div class="form-group">
                                    <label class="col-sm-2 col-sm-2 control-label">Kısaltma : </label>
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(m => m.Kisaltma, new
                                   {
                                       @type = "text",
                                       @class = "form-control",
                                       @placeholder = "",
                                       @required = ""
                                   })
                                        @Html.ValidationMessageFor(m => m.Kisaltma)
                                    </div>
                                </div>
                                <div class="hr-line-dashed"></div>
                                <div class="form-group">
                                    <label class="col-sm-2 col-sm-2 control-label">Server Adresi : </label>
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(m => m.ServerAdres, new
                                   {
                                       @type = "text",
                                       @class = "form-control",
                                       @placeholder = "",
                                       @required = ""
                                   })
                                        @Html.ValidationMessageFor(m => m.ServerAdres)
                                    </div>
                                </div>
                                <div class="hr-line-dashed"></div>
                                <div class="form-group">
                                    <label class="col-sm-2 col-sm-2 control-label">Sayfa Adresi : </label>
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(m => m.SayfaAdres, new
                                   {
                                       @type = "text",
                                       @class = "form-control",
                                       @placeholder = "",                                       
                                   })                                       
                                    </div>
                                </div>
                                <div class="hr-line-dashed"></div>
                                <div class="form-group">
                                    <label class="col-sm-2 col-sm-2 control-label">Google Api Key : </label>
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(m => m.GoogleApiKey, new
                                   {
                                       @type = "text",
                                       @class = "form-control",
                                       @placeholder = "",
                                       @required = ""
                                   })
                                        @Html.ValidationMessageFor(m => m.GoogleApiKey)
                                    </div>
                                </div>
                                <div class="hr-line-dashed"></div>
                                <div class="form-group">
                                    <label class="col-sm-2 col-sm-2 control-label">Apple Api Key : </label>
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(m => m.AppleApiKey, new
                                   {
                                       @type = "text",
                                       @class = "form-control",
                                       @placeholder = "",
                                       @required = ""
                                   })
                                        @Html.ValidationMessageFor(m => m.AppleApiKey)
                                    </div>
                                </div>
                                <div class="hr-line-dashed"></div>
                                <div class="form-group">
                                    <label class="col-sm-2 col-sm-2 control-label">Apple Sertifika : </label>
                                    <div class="col-sm-10">
                                        @Model.AppleSertifika &nbsp; &nbsp; &nbsp;
                                        @if (Model.AppleSertifika != null)
                                        {
                                            @Html.ActionLink("Sertifika Sil", "SertifikaSil", "ProgramIslemAyar", new { },
                 new { onclick = "return confirm('Silmek istediğinize emin misiniz?');" })
                                        }
                                    </div>
                                </div>
                                <div class="hr-line-dashed"></div>
                                <div class="form-group">
                                    <label class="col-sm-2 col-sm-2 control-label">KeyCode : </label>
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(m => m.KeyCode, new
                                   {
                                       @type = "text",
                                       @class = "form-control",
                                       @placeholder = "",
                                       @required = ""
                                   })
                                        @Html.ValidationMessageFor(m => m.KeyCode)
                                    </div>
                                </div>
                                <div class="hr-line-dashed"></div>
                                <div class="form-group text-center">
                                    <input type="submit" id="Guncelle" value='Güncelle' formaction="/ProgramIslemAyar/Index" class="btn btn-success" />
                                    <input type="button" value="İptal" class="btn btn-danger" onclick="window.location.href='@Url.Action("Index", "ProgramIslemAyar" )';" />
                                </div>

                                if (Model.ResimUrl != null)
                                {
                                    <div class="hr-line-dashed"></div>
                                    <div class="col-sm-12">
                                        <div style="float:left" class="text-center">

                                            <table>
                                                <tr>
                                                    <td>
                                                        <img width="200" height="250" src='~/Uploads/Resim/@Model.ResimUrl' />
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        @Html.ActionLink("Resmi Sil", "ResimSil", "ProgramIslemAyar", new { },
                 new { onclick = "return confirm('Silmek istediğinize emin misiniz?');" })
                                                    </td>
                                                </tr>
                                            </table>

                                        </div>
                                    </div>
                                }
                            }

                            <div class="hr-line-dashed"></div>
                            <div class="form-group">
                                @if (Model.AppleSertifika == null)
                                {
                                    <label class="col-sm-2 col-sm-2 control-label">Apple Sertifika : </label>
                                        <div class="col-sm-10">
                                            @using (Html.BeginForm("SertifikaYukle", "ProgramIslemAyar", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                            {
                                                <table>
                                                    <tr>
                                                        <td>
                                                            <input type="file" name="file" />
                                                        </td>
                                                        <td>
                                                            <input type="submit" value="Yükle" />
                                                        </td>
                                                    </tr>
                                                </table>
                                            }
                                        </div>
                                        <br />
                                }
                            </div>
                            <div class="hr-line-dashed"></div>
                            <div class="form-group">
                                @if (Model.ResimUrl == null)
                                {
                                    <label class="col-sm-2 col-sm-2 control-label">Resim : </label>
                                        <div class="col-sm-10">
                                            @using (Html.BeginForm("ResimYukle", "ProgramIslemAyar", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                            {
                                                <table>
                                                    <tr>
                                                        <td>
                                                            <input type="file" name="file" />
                                                        </td>
                                                        <td>
                                                            <input type="submit" value="Yükle" />
                                                        </td>
                                                    </tr>
                                                </table>
                                            }
                                        </div>
                                        <br />
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}