@model BelediyeProject.Models.KullaniciIslemViewModel

@{
    ViewBag.Title = "Kullanıcı Güncelle";
    Layout = "~/Views/Shared/_AnaSayfaLayoutPage.cshtml";
}

@section MenuSection
{
    @foreach (var menuItem in Model.Menu.Where(p => p.UstMenuId == null))
    {
        @Html.Raw("<li>")
        if (string.IsNullOrEmpty(menuItem.Link))
        {
            <a href='#'><i class="fa fa-th-large"></i> <span class="nav-label">@menuItem.Adi</span> <span class="fa arrow"></span></a>

            @Html.Raw("<ul class='nav nav - second - level'>")

            foreach (var subMenuItem in Model.Menu.Where(p => p.UstMenuId == menuItem.Id))
            {
                <li><a href='@subMenuItem.Link'>@subMenuItem.Adi</a></li>
            }

            @Html.Raw("</ul>")
        }
        else
        {
            <a href='@menuItem.Link'><i class="fa fa-th-large"></i> <span class="nav-label">@menuItem.Adi</span></a>
        }

        @Html.Raw("</li>")
    }
}

@section MainSection
{
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(m => m.KullaniciKey)
        <div class="wrapper wrapper-content">
            <div class="row">
                <div class="col-lg-12">
                    <div class="ibox float-e-margins">
                        <div class="ibox-content">
                            <h3>
                                Kullanıcı Kaydet/Güncelle
                            </h3>
                            <div class="form-horizontal m-t-md">
                                <div class="form-group">
                                    <label class="col-sm-2 col-sm-2 control-label">Kullanıcı Adı : </label>
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(m => m.KullaniciAdi, new
                                   {
                                       @type = "text",
                                       @class = "form-control",
                                       @placeholder = "",
                                       @required = "",
                                   })
                                        @Html.ValidationMessageFor(m => m.KullaniciAdi)
                                    </div>
                                </div>
                                <div class="hr-line-dashed"></div>
                                <div class="form-group">
                                    <label class="col-sm-2 col-sm-2 control-label">Şifre : </label>
                                    <div class="col-sm-10">
                                        @Html.PasswordFor(m => m.Sifre, new
                                   {
                                       @type = "password",
                                       @class = "form-control",
                                       @placeholder = "",
                                       @required = ""
                                   })
                                        @Html.ValidationMessageFor(m => m.Sifre)
                                    </div>
                                </div>
                                <div class="hr-line-dashed"></div>
                                <div class="form-group">
                                    <label class="col-sm-2 col-sm-2 control-label">Rol : </label>
                                    <div class="col-sm-4">
                                        @Html.DropDownListFor(m => m.KullaniciRolTipKey,
                                                               new SelectList(Model.KullaniciRolTipList, "KullaniciRolTipKey", "KullaniciRolTipAdi"),
                                                               new
                                                               {
                                                                   @class = "form - control m - b",
                                                                   @required = "",
                                                                   @style = "width:200px",
                                                                   @id = "drpRol",
                                                                   onchange = "SelectedIndexChanged()"
                                                               })
                                    </div>
                                    <div class="col-sm-6">
                                        <div id="divRol" style="
                                        @if (Model.KullaniciRolTipKey == 5)
                                        {
                                            @Html.Raw("visibility:visible")
                                        }
                                        else
                                        {
                                             @Html.Raw("visibility:hidden")
                                        } ">
                                            @Html.CheckBoxListFor(model => model.DosyaGonderilecekBirimTipKeys,
                      model => model.DosyaGonderilecekBirimTipList,
                      DosyaGonderilecekBirimTip => DosyaGonderilecekBirimTip.DosyaGonderilecekBirimTipKey,
                      DosyaGonderilecekBirimTip => DosyaGonderilecekBirimTip.DosyaGonderilecekBirimTipAdi,
                      model => model.SecilenDosyaGonderilecekBirimTipList,
                      MvcCheckBoxList.Model.Position.Vertical
                     )
                                        </div>
                                    </div>
                                </div>
                                <div class="hr-line-dashed"></div>
                                <div class="form-group">
                                    <label class="col-sm-2 col-sm-2 control-label">Aktif : </label>
                                    <div class="col-sm-10">
                                        @Html.CheckBoxFor(m => m.AktifMi, new
                                   {
                                       @class = "i-checks",
                                       @checked = "checked"
                                   })
                                    </div>
                                </div>
                                <div class="hr-line-dashed"></div>
                                <div class="form-group text-center">
                                    <input type="submit" id="Guncelle" value="Güncelle" formaction="/KullaniciIslem/Guncelle" class="btn btn-success" />
                                    <input type="button" value="İptal" class="btn btn-danger" onclick="window.location.href='@Url.Action("Index", "KullaniciIslem" )';" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <script type="text/javascript">
        function SelectedIndexChanged() {
            if (document.getElementById("drpRol").value == "5") {
                document.getElementById("divRol").style.visibility = "visible";
            }
            else {
                document.getElementById("divRol").style.visibility = "hidden";
            }
        }
    </script>
}