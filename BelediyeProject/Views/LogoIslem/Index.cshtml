@model BelediyeProject.Models.LogoIslemViewModel

@{
    ViewBag.Title = "Logo Bilgileri";
    Layout = "~/Views/Shared/_AnaSayfaLayoutPage.cshtml";
}

@section MenuSection
{
    @foreach (var menuItem in Model.Menu.Where(p => p.UstMenuId == null))
    {
        @Html.Raw("<li>")
        if (string.IsNullOrEmpty(menuItem.Link))
        {
            <a href='#'><i class="fa fa-th-large"></i> <span class="nav-label">@menuItem.Adi</span> <span class="fa arrow"></span></a>

            @Html.Raw("<ul class='nav nav - second - level'>")

            foreach (var subMenuItem in Model.Menu.Where(p => p.UstMenuId == menuItem.Id))
            {
                <li><a href='@subMenuItem.Link'>@subMenuItem.Adi</a></li>
            }

            @Html.Raw("</ul>")
        }
        else
        {
            <a href='@menuItem.Link'><i class="fa fa-th-large"></i> <span class="nav-label">@menuItem.Adi</span></a>
        }

        @Html.Raw("</li>")
    }
}

@section MainSection
{
    <div class="wrapper wrapper-content">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-content">
                        <h3>
                            Logo İşlemleri
                        </h3>
                        <div class="form-horizontal m-t-md">
                            @using (Html.BeginForm())
                            {
                                @Html.HiddenFor(m => m.LogoKey)

                                if (Model.DosyaYolu != null)
                                {
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group">

                                        <div style="float:left" class="text-center">
                                            <table>
                                                <tr>
                                                    <td>
                                                        <img width="200" height="250" src='~/Uploads/Resim/@Model.DosyaYolu' />
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        @Html.ActionLink("Resmi Sil", "ResimSil", "LogoIslem", new { id = Model.LogoKey },
                 new { onclick = "return confirm('Silmek istediğinize emin misiniz?');" })
                                                    </td>
                                                </tr>
                                            </table>
                                        </div>

                                    </div>
                                }

                            }
                            @if (Model.DosyaYolu==null)
                            {
                                <div class="hr-line-dashed"></div>
                                <div class="form-group">
                                    <label class="col-sm-2 col-sm-2 control-label">Resim : </label>
                                    <div class="col-sm-10">
                                        @using (Html.BeginForm("ResimYukle", "LogoIslem", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                        {
                                            <table>
                                                <tr>
                                                    <td>
                                                        <input type="file" name="file" />
                                                    </td>
                                                    <td>
                                                        <input type="submit" value="Yükle" />
                                                    </td>
                                                </tr>
                                            </table>
                                        }
                                    </div>
                                    <br />
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}