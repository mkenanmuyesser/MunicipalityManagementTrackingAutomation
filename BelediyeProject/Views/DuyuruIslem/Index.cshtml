@model BelediyeProject.Models.DuyuruIslemViewModel

@{
    ViewBag.Title = "Duyuru İşlemleri";
    Layout = "~/Views/Shared/_AnaSayfaLayoutPage.cshtml";
}


@section MenuSection
{
    @foreach (var menuItem in Model.Menu.Where(p => p.UstMenuId == null))
    {
        @Html.Raw("<li>")
        if (string.IsNullOrEmpty(menuItem.Link))
        {
            <a href='#'><i class="fa fa-th-large"></i> <span class="nav-label">@menuItem.Adi</span> <span class="fa arrow"></span></a>

            @Html.Raw("<ul class='nav nav - second - level'>")

            foreach (var subMenuItem in Model.Menu.Where(p => p.UstMenuId == menuItem.Id))
            {
                <li><a href='@subMenuItem.Link'>@subMenuItem.Adi</a></li>
            }

            @Html.Raw("</ul>")
        }
        else
        {
            <a href='@menuItem.Link'><i class="fa fa-th-large"></i> <span class="nav-label">@menuItem.Adi</span></a>
        }

        @Html.Raw("</li>")
    }
}

@section MainSection
{
    <div class="wrapper wrapper-content">
        <div class="row">
            <div class="col-lg-12">
                <div style="float:right">
                    @Html.ActionLink("Yeni Duyuru Oluştur", "Kaydet", "DuyuruIslem", null, null)
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="ibox float-e-margins">
                            <div class="ibox-title">
                                <h5>Duyuru İşlemleri</h5>
                                <div class="ibox-tools">
                                    <a class="link" href="/DuyuruIslem/Index">
                                        <i class="fa fa-refresh"></i>
                                    </a>
                                </div>
                            </div>
                            <div class="ibox-content">
                                <div class="table-responsive">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>#</th>
                                                <th>Tarih</th>
                                                <th>Başlık</th>
                                                <th>Özet</th>
                                                <th>Aktif</th>
                                                <th>İşlemler</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var tanitimmesaj in Model.DuyuruList)
                                            {
                                                <tr>
                                                    <td>@tanitimmesaj.DuyuruKey</td>
                                                    <td>@tanitimmesaj.Tarih</td>
                                                    <td>@tanitimmesaj.Baslik</td>
                                                    <td>@tanitimmesaj.Ozet</td>
                                                    <td>
                                                        @if (@tanitimmesaj.AktifMi)
                                                        {
                                                            @Html.Raw("Aktif")
                                                        }
                                                        else
                                                        {
                                                            @Html.Raw("Pasif")
                                                        }
                                                    </td>

                                                    <td>
                                                        <a href="/DuyuruIslem/Guncelle/@tanitimmesaj.DuyuruKey">Düzenle</a>
                                                        @Html.ActionLink(
                                                            "Sil",
                                                            "Sil",
                                                            new { id = tanitimmesaj.DuyuruKey },
                                                            new { onclick = "return confirm('Silmek istediğinize emin misiniz?');" })
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}

