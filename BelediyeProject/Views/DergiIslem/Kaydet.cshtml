@model BelediyeProject.Models.DergiIslemViewModel

@{
    ViewBag.Title = "Dergi Kaydet";
    Layout = "~/Views/Shared/_AnaSayfaLayoutPage.cshtml";
}

@section MenuSection
{
    @foreach (var menuItem in Model.Menu.Where(p => p.UstMenuId == null))
    {
        @Html.Raw("<li>")
        if (string.IsNullOrEmpty(menuItem.Link))
        {
            <a href='#'><i class="fa fa-th-large"></i> <span class="nav-label">@menuItem.Adi</span> <span class="fa arrow"></span></a>

            @Html.Raw("<ul class='nav nav - second - level'>")

            foreach (var subMenuItem in Model.Menu.Where(p => p.UstMenuId == menuItem.Id))
            {
                <li><a href='@subMenuItem.Link'>@subMenuItem.Adi</a></li>
            }

            @Html.Raw("</ul>")
        }
        else
        {
            <a href='@menuItem.Link'><i class="fa fa-th-large"></i> <span class="nav-label">@menuItem.Adi</span></a>
        }

        @Html.Raw("</li>")
    }
}

@section MainSection
{
    <form action="" method="post" enctype="multipart/form-data">
        <div class="wrapper wrapper-content">
            <div class="row">
                <div class="col-lg-12">
                    <div class="ibox float-e-margins">
                        <div class="ibox-content">
                            <h3>
                                Dergi Kaydet
                            </h3>
                            <div class="form-horizontal m-t-md">

                                @Html.HiddenFor(m => m.DergiKey)

                                <div class="form-group">
                                    <label class="col-sm-2 col-sm-2 control-label">Adı : </label>
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(m => m.Adi, new
                                   {
                                       @type = "text",
                                       @class = "form-control",
                                       @placeholder = "",
                                       @required = "",
                                   })
                                        @Html.ValidationMessageFor(m => m.Adi)
                                    </div>
                                </div>                                
                                <div class="hr-line-dashed"></div>
                                <div class="form-group">
                                    <label class="col-sm-2 col-sm-2 control-label">Aktif : </label>
                                    <div class="col-sm-10">
                                        @Html.CheckBoxFor(m => m.AktifMi, new
                                   {
                                       @class = "i-checks",
                                       @checked = "checked"
                                   })
                                    </div>
                                </div>
                                <div class="hr-line-dashed"></div>
                                <div class="form-group text-center">
                                    <input type="submit" id="KaydetGuncelle" value='
                                       @if (Model.DergiKey == 0 || Model.DergiKey == -1)
                                       {
                                           @Html.Raw("Kaydet")
                                       }
                                       else
                                       {
                                           @Html.Raw("Güncelle")
                                       } '
                                           formaction="/DergiIslem/Kaydet" class="btn btn-success" />
                                    <input type="button" value="İptal" class="btn btn-danger" onclick="window.location.href='@Url.Action("Index", "DergiIslem" )';" />
                                </div>
                                @if (Model.DosyaYolu != null)
                                {
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group">

                                        <div style="float:left" class="text-center">
                                            <table>
                                                <tr>
                                                    <td>
                                                        <img width="200" height="250" src='~/Uploads/Resim/@Model.DosyaYolu' />
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        @Html.ActionLink("Resmi Sil", "ResimSil", "DergiIslem", null,
                 new { onclick = "return confirm('Silmek istediğinize emin misiniz?');" })
                                                    </td>
                                                </tr>
                                            </table>
                                        </div>
                                    </div>
                                }
                                @if (Model.DosyaYolu == null)
                                {
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group">
                                        <label class="col-sm-2 col-sm-2 control-label">Resim : </label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(m => m.ImageUpload, new { type = "file" })
                                        </div>
                                        <br />
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
}

