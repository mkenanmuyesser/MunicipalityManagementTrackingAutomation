@model BelediyeProject.Models.TanimIslemBirimViewModel

    @{
        ViewBag.Title = "Birim Tanım İşlemleri";
        Layout = "~/Views/Shared/_AnaSayfaLayoutPage.cshtml";
    }

    @section MenuSection
{
        @foreach (var menuItem in Model.Menu.Where(p => p.UstMenuId == null))
    {
            @Html.Raw("<li>")
            if (string.IsNullOrEmpty(menuItem.Link))
            {
                <a href='#'><i class="fa fa-th-large"></i> <span class="nav-label">@menuItem.Adi</span> <span class="fa arrow"></span></a>

                @Html.Raw("<ul class='nav nav - second - level'>")

                foreach (var subMenuItem in Model.Menu.Where(p => p.UstMenuId == menuItem.Id))
                {
                    <li><a href='@subMenuItem.Link'>@subMenuItem.Adi</a></li>
                }

                @Html.Raw("</ul>")
            }
            else
            {
                <a href='@menuItem.Link'><i class="fa fa-th-large"></i> <span class="nav-label">@menuItem.Adi</span></a>
            }

            @Html.Raw("</li>")
        }
    }

    @section MainSection
{
        <div class="wrapper wrapper-content">
            <div class="row">
                <div class="col-lg-12">
                    <div style="float:right">
                        @Html.ActionLink("Yeni Birim Oluştur", "Kaydet", "TanimIslemBirim", null, null)
                    </div>
                    <div class="panel blank-panel">
                        <div class="panel-heading">
                            <div class="panel-title m-b-md"><h4>Birim Tanım İşlemleri</h4></div>
                        </div>
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Birim Adı</th>
                                            <th>Aktif</th>
                                            <th>İşlemler</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var birimTipleri in Model.BirimTipleri)
                                        {
                                            <tr>
                                                <td>@birimTipleri.DosyaGonderilecekBirimTipKey</td>
                                            <td>@birimTipleri.DosyaGonderilecekBirimTipAdi</td>
                                            <td>
                                                @if (@birimTipleri.AktifMi)
                                                {
                                                    @Html.Raw("Aktif")
                                                }
                                                else
                                                {
                                                    @Html.Raw("Pasif")
                                                }
                                            </td>
                                            <td>
                                                <a href="/TanimIslemBirim/Guncelle/@birimTipleri.DosyaGonderilecekBirimTipKey">Düzenle</a>
                                                @Html.ActionLink(
                                                            "Sil",
                                                            "Sil",
                                                            new { id = birimTipleri.DosyaGonderilecekBirimTipKey },
                                                            new { onclick = "return confirm('Silmek istediğinize emin misiniz?');" })
                                            </td>
                                        </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    }