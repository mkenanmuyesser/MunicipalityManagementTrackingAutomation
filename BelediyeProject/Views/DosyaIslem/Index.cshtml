                                                            <td>@dosya.tt_DosyaGonderilecekBirimTip.DosyaGonderilecekBirimTipAdi</td>
                                                            <td>@dosya.tt_DosyaMesajTip.DosyaMesajTipAdi</td>
                                                            <td>@dosya.IpAdres</td>
                                                            <td>@dosya.Enlem - @dosya.Boylam</td>
                                                            <td>@dosya.IslemZamani</td>
                                                            <td>@dosya.tt_DosyaDurumTip.DosyaDurumTipAdi</td>
                                                            <td>
                                                                <table>
                                                                    <tr>
                                                                        @foreach (var resim in dosya.DosyaResims)
                                                                        {
                                                                            <td>
                                                                                <img src="@resim.DosyaYolu" width="50" height="50" />
                                                                            </td>
                                                                        }
                                                                    </tr>
                                                                </table>
                                                            </td>
                                                            <td>
                                                                <a href="/DosyaIslem/Detaylar/@dosya.DosyaKey">Detaylar</a>
                                                            </td>
                                                        </tr>
                                                    }
