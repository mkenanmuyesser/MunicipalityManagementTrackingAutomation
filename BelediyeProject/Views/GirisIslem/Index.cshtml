@model BelediyeProject.Models.GirisIslemViewModel

@{
    ViewBag.Title = "Panel Giriş";
    Layout = "~/Views/Shared/_GirisIslemLayoutPage.cshtml";
}

@section MainSection
    {
    @using (Html.BeginForm())
    {
        <div class="middle-box text-center loginscreen animated fadeInDown">
            <div>
                <div>
                    <h1 class="logo-name">@Model.ProgramAyar.Kisaltma</h1>
                </div>
                <h3>@Model.ProgramAyar.Baslik'ne <br />Hoş Geldiniz</h3>
                <p>
                </p>
                <p>Lütfen giriş yapınız.</p>

                <div class="form-group">
                    @Html.TextBoxFor(m => m.KullaniciAdi, new
               {
                   @type = "text",
                   @class = "form-control",
                   @placeholder = "Kullanıcı Adı",
                   @required = ""
               })
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Sifre, new
               {
                   @type = "password",
                   @class = "form-control",
                   @placeholder = "Şifre",
                   @required = ""
               })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Sonuc," ")
                </div>
                <button type="submit" class="btn btn-primary block full-width m-b">Giriş</button>
                <p class="m-t"> <small>@Model.ProgramAyar.Kisaltma &copy; @DateTime.Now.Year</small> </p>
            </div>
        </div>
    }
}

